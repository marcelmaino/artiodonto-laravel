              slider3Img2.src = `/images/${grupo3[1]}`;
              slider3Img3.src = `/images/${grupo3[2]}`;
            }
            
            // Função para alternar imagens com efeito fade
            function alternarImagens(sliderId, tempoTransicao, totalImagens) {
              let imagemAtual = 0;
              
              setInterval(() => {
                const img1 = document.getElementById(`${sliderId}-img-1`);
                const img2 = document.getElementById(`${sliderId}-img-2`);
                const img3 = document.getElementById(`${sliderId}-img-3`);
                
