<!-- Seção simples para testar -->
<section class="py-20 bg-gray-50">
    <div class="container mx-auto text-center">
        <h2 class="text-4xl font-bold text-teal-600 mb-4">Site migrado para Astro!</h2>
        <p class="text-gray-600">Estrutura básica criada com sucesso. Continuaremos migrando o restante do conteúdo.</p>
    </div>
</section>

</Layout>

<script is:inline>
// Script específico para a homepage
document.addEventListener('DOMContentLoaded', function() {
    // Menu mobile específico da homepage
    const menuToggle = document.getElementById('menu-toggle');
    const menuMobile = document.getElementById('menu-mobile-home');
    const menuClose = document.getElementById('menu-close-home');
    
    if (menuToggle && menuMobile && menuClose) {
        menuToggle.addEventListener('click', () => {
            menuMobile.classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        });

        menuClose.addEventListener('click', () => {
            menuMobile.classList.add('hidden');
            document.body.style.overflow = '';
        });

        menuMobile.querySelectorAll('a').forEach(link => {
            link.addEventListener('click', () => {
                menuMobile.classList.add('hidden');
                document.body.style.overflow = '';
            });
        });
    }
});
</script>

<style>
/* Animações de fade-in-up */
@keyframes fade-in-up {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.animate-fade-in-up {
    animation: fade-in-up 0.8s ease-out forwards;
}

/* Estilos para o menu */
.menu-line {
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background: #14B8A6;
    transition: width 0.3s ease;
}

.menu-item:hover .menu-line,
.menu-item.hover .menu-line {
    width: 100%;
}
</style>