            /* Estilos para o slider de antes e depois */
    .before-after-container {
        position: relative;
        width: 100%;
        height: 100%;
        overflow: hidden;
        border-radius: 0.5rem;
        cursor: col-resize;
        background: #f0f0f0;
        min-height: 200px;
        border: 2px solid #e5e7eb;
        /* Previne seleção de texto */
        user-select: none;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        /* Previne seleção de imagem */
        -webkit-touch-callout: none;
        -webkit-user-drag: none;
        -khtml-user-drag: none;
        -moz-user-drag: none;
        -o-user-drag: none;
        user-drag: none;
    }
    
    .before-after-container img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
        max-width: none;
        max-height: none;
        /* Previne seleção e arraste das imagens */
        user-select: none;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        -webkit-user-drag: none;
        -khtml-user-drag: none;
        -moz-user-drag: none;
        -o-user-drag: none;
        user-drag: none;
        pointer-events: none; /* Permite que o container receba os eventos */
    }
    
    .before-after-container img:first-child {
        z-index: 2;
        clip-path: polygon(0 0, var(--clip-position, 50%) 0, var(--clip-position, 50%) 100%, 0 100%);
    }
    
    .before-after-container img:last-child {
        z-index: 1;
    }
    
    .slider-handle {
        position: absolute;
        top: 0;
        left: var(--clip-position, 50%);
        width: 4px;
        height: 100%;
        background: white;
        border-radius: 2px;
        z-index: 3;
        cursor: col-resize;
        transform: translateX(-50%);
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
        /* Removida a transição que causava atraso */
        /* Previne seleção do handle */
        user-select: none;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        pointer-events: auto; /* Garante que o handle receba eventos */
    }
    
    .slider-handle::before {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 20px;
        height: 20px;
        background: white;
        border-radius: 50%;
        border: 2px solid #14B8A6;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
    }
    
    .slider-handle::after {
        content: '◀▶';
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        font-size: 8px;
        color: #14B8A6;
        font-weight: bold;
    }
    
    /* Estilos específicos para as imagens do slider */
    .before-image {
        z-index: 1;
    }
    
    .after-image {
        z-index: 2;
        clip-path: polygon(0 0, var(--clip-position, 50%) 0, var(--clip-position, 50%) 100%, 0 100%);
    }
    
    /* Animação de fade-in para elementos */
    .fade-on-scroll {
        opacity: 0;
        transform: translateY(40px);
        transition: opacity 0.8s cubic-bezier(.4,0,.2,1), transform 0.8s cubic-bezier(.4,0,.2,1);
        will-change: opacity, transform;
    }
    
    .fade-on-scroll.fade-in-active {
        opacity: 1 !important;
        transform: translateY(0);
    }
    
    /* Animações para procedimentos - movidas para JavaScript */
    
    /* Delays para animações */
    .delay-1 { transition-delay: 0.1s; }
    .delay-2 { transition-delay: 0.2s; }
    .delay-3 { transition-delay: 0.3s; }
    .delay-4 { transition-delay: 0.4s; }
    .delay-5 { transition-delay: 0.5s; }
    .delay-6 { transition-delay: 0.6s; }
    .delay-7 { transition-delay: 0.7s; }
    .delay-8 { transition-delay: 0.8s; }
    .delay-9 { transition-delay: 0.9s; }
    .delay-10 { transition-delay: 1.0s; }
    
    /* Animações de fade-in-up */
    @keyframes fade-in-up {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    .animate-fade-in-up {
        animation: fade-in-up 0.8s ease-out forwards;
    }
    
    /* Estilos para o menu */
    .menu-line {
        position: absolute;
        bottom: -2px;
        left: 0;
        width: 0;
        height: 2px;
        background: #14B8A6;
        transition: width 0.3s ease;
    }
    
    .menu-item.hover .menu-line {
        width: 100%;
