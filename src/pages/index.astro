        function getCardWidth() {
            if (window.innerWidth >= 1024) { // lg
                return 25; // 25% da largura (4 cards visíveis)
            } else if (window.innerWidth >= 640) { // sm
                return 50; // 50% da largura (2 cards visíveis)
            } else {
                return 100; // 100% da largura (1 card visível)
            }
        }
        
        // Calcula quantos cards são visíveis por tela
        function getVisibleCards() {
            if (window.innerWidth >= 1024) { // lg
                return 4; // 4 cards visíveis
            } else if (window.innerWidth >= 640) { // sm
                return 2; // 2 cards visíveis
            } else {
                return 1; // 1 card visível
            }
        }
        
        // Função para atualizar o slider
        function updateSlider() {
            const cardWidth = getCardWidth();
            const visibleCards = getVisibleCards();
            
            // Calcula a posição de translação baseada no card atual
            // Cada card move a quantidade correspondente à sua largura
            let translateX = -currentSlide * cardWidth;
            
            // Garante que não haja espaços em branco
            // O último card visível deve estar completamente visível
            const maxTranslate = -(totalSlides - visibleCards) * cardWidth;
            if (translateX < maxTranslate) {
                translateX = maxTranslate;
                currentSlide = totalSlides - visibleCards;
            }
            
            // Aplica a transformação com transição suave
            sliderContainer.style.transform = `translateX(${translateX}%)`;
            
            console.log(`Card atual: ${currentSlide + 1}/${totalSlides}, Largura: ${cardWidth}%, Translate: ${translateX}%, Max: ${maxTranslate}%, Visíveis: ${visibleCards}`);
        }
        
        // Função para ir para o próximo slide
        function nextSlide() {
            currentSlide = (currentSlide + 1) % totalSlides;
            updateSlider();
        }
        
        // Função para ir para o slide anterior
        function prevSlide() {
            currentSlide = currentSlide === 0 ? totalSlides - 1 : currentSlide - 1;
            updateSlider();
        }
        
        // Função para navegação contínua (sem parar no final)
        function continuousNext() {
            currentSlide++;
            // Se passou do último card, volta ao primeiro
            if (currentSlide >= totalSlides) {
                currentSlide = 0;
            }
            updateSlider();
        }
        
        function continuousPrev() {
            currentSlide--;
            // Se passou do primeiro card, vai para o último
            if (currentSlide < 0) {
                currentSlide = totalSlides - 1;
            }
            updateSlider();
        }
        
        // Event listeners para os botões
        prevBtn.addEventListener('click', () => {
            console.log('Botão anterior clicado');
            continuousPrev();
        });
        
        nextBtn.addEventListener('click', () => {
            console.log('Botão próximo clicado');
            continuousNext();
        });
        
        // Inicializa o slider
        updateSlider();
        console.log('Slider de procedimentos inicializado com sucesso!');
        
        // Debug: mostra informações detalhadas sobre os cards
        function debugSlider() {
