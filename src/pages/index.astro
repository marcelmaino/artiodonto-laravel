---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Arti Odonto - Clínica Odontológica | Home" description="Clínica odontológica especializada em tratamentos modernos e personalizados. Agende sua consulta hoje mesmo!">

<!-- Header -->
<header class="w-full h-screen relative overflow-hidden">
    <!-- Fallback para fundo estático -->
    <div class="absolute inset-0 z-0 bg-cover bg-right md:bg-center" 
         style="background-image: url('/images/fundo-hero-mobile.webp');" 
         id="bg-fallback">
    </div>
    
    <!-- Slider de fundo -->
    <div class="absolute inset-0 z-0" id="slider-container-bg" style="display: none;">
        <div class="relative w-full h-full">
            <!-- Imagem 1 -->
            <div class="absolute inset-0 transition-opacity duration-1000 ease-in-out opacity-100" 
                 id="bg-slide-1">
            </div>
            <!-- Imagem 2 -->
            <div class="absolute inset-0 transition-opacity duration-1000 ease-in-out opacity-0" 
                 id="bg-slide-2">
            </div>
        </div>
    </div>
    
    <!-- Conteúdo do header -->
    <div class="container mx-auto h-full flex flex-col justify-between py-10 relative z-10">
        <div class="flex items-center justify-between items-center px-8 2xl:px-0">
            <!-- Logo -->
            <div class="flex items-center">
                <img src="/images/logo.png" alt="Logo da Clínica" class="h-20 w-auto">
            </div>
            <!-- Menu -->
            <nav class="flex items-center justify-between items-center">
                <!-- Botão do menu mobile -->
                <button id="menu-toggle" class="lg:hidden text-white focus:outline-none" aria-label="Abrir menu">
