            console.log(`Cards visíveis por tela: ${visibleCards}`);
            console.log(`Card atual: ${currentSlide + 1}/${totalSlides}`);
            console.log(`Translate atual: ${-currentSlide * cardWidth}%`);
            console.log(`Posição máxima: ${-(totalSlides - visibleCards) * cardWidth}%`);
            console.log('===================');
        }
        
        // Executa debug na inicialização
        debugSlider();
        
        // Listener para redimensionamento da janela
        window.addEventListener('resize', () => {
            updateSlider();
            debugSlider();
        });
        
