        function onScrollFadeIn() {
            // Anima elementos com classe fade-on-scroll
            var fadeElements = document.querySelectorAll('.fade-on-scroll');
            var windowHeight = window.innerHeight;
            
            fadeElements.forEach(function(el) {
                var rect = el.getBoundingClientRect();
                var delay = parseInt(el.getAttribute('data-fade-delay') || '0') || 0;
                if (rect.top < windowHeight - 60) {
                    setTimeout(function() {
                        el.classList.add('fade-in-active');
                        el.classList.remove('opacity-0');
                    }, delay);
                }
            });
            
            // Anima elementos com classe procedimentos-fade-in
            var procedimentosElements = document.querySelectorAll('.procedimentos-fade-in');
            console.log('Elementos procedimentos encontrados:', procedimentosElements.length);
            
            procedimentosElements.forEach(function(el) {
                var rect = el.getBoundingClientRect();
                var delayClass = el.className.match(/delay-(\d+)/);
                var delay = delayClass ? parseInt(delayClass[1]) * 100 : 0;
                
                if (rect.top < windowHeight - 60) {
                    console.log('Animando elemento:', el, 'com delay:', delay);
                    setTimeout(function() {
                        el.classList.add('fade-in-active');
                        console.log('Classe fade-in-active adicionada a:', el);
                    }, delay);
