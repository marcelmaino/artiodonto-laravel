    <script>
    (function() {
        // Slider de fundo automático com suporte responsivo
        function initBackgroundSlider() {
            const slides = [
                document.getElementById('bg-slide-1'),
                document.getElementById('bg-slide-2'),
                document.getElementById('bg-slide-3')
            ];
            
            const indicators = [
                document.getElementById('hero-indicator-0'),
                document.getElementById('hero-indicator-1'),
                document.getElementById('hero-indicator-2')
            ];
            
            // Detecta se é dispositivo móvel
            const isMobile = window.innerWidth <= 768;
            
            // Configuração de imagens por dispositivo
            const imageConfig = {
                desktop: {
                    slide1: '/images/fundo-hero.webp',
                    slide2: '/images/fundo-hero2.webp',
                    slide3: '/images/fundo-hero3.webp'
                },
                mobile: {
                    slide1: '/images/fundo-hero-mobile.webp',
                    slide2: '/images/fundo-hero-mobile1.webp',
                    slide3: '/images/fundo-hero-mobile2.webp'
                }
            };
            
            // Seleciona as imagens baseado no dispositivo
            const currentImages = isMobile ? imageConfig.mobile : imageConfig.desktop;
            
            // Aplica as imagens aos slides
            slides.forEach((slide, index) => {
                if (slide) {
                                const imageKey = `slide${index + 1}` as keyof typeof currentImages;
            slide.style.backgroundImage = `url('${currentImages[imageKey]}')`;
                    console.log(`Slide ${index + 1} configurado com: ${currentImages[imageKey]}`);
                }
            });
            
            let currentSlide = 0;
            const slideInterval = 5000; // 5 segundos por slide
            let autoPlayInterval: ReturnType<typeof setInterval> | undefined;
            
            function showSlide(slideIndex) {
                // Esconde todos os slides
                slides.forEach((slide, index) => {
                    if (slide) {
                        slide.style.opacity = index === slideIndex ? '1' : '0';
                    }
                });
                
                // Atualiza indicadores
                indicators.forEach((indicator, index) => {
                    if (indicator) {
                        indicator.classList.toggle('bg-white', index === slideIndex);
                        indicator.classList.toggle('bg-white/50', index !== slideIndex);
                    }
                });
                
                currentSlide = slideIndex;
            }
            
            function nextSlide() {
                const nextSlideIndex = (currentSlide + 1) % slides.length;
                showSlide(nextSlideIndex);
            }
            
            function goToSlide(slideIndex) {
                showSlide(slideIndex);
                // Reinicia o timer automático
                if (autoPlayInterval) {
                    clearInterval(autoPlayInterval);
                    startAutoPlay();
                }
            }
            
            function startAutoPlay() {
                autoPlayInterval = setInterval(nextSlide, slideInterval);
            }
            
            // Adiciona eventos aos indicadores
            indicators.forEach((indicator, index) => {
                if (indicator) {
                    indicator.addEventListener('click', () => goToSlide(index));
                }
            });
            
            // Inicia o slider automático
            if (slides.every(slide => slide)) {
                startAutoPlay();
                console.log(`Slider de fundo iniciado com ${slides.length} slides para ${isMobile ? 'mobile' : 'desktop'}`);
                console.log('Imagens carregadas:', currentImages);
            } else {
                console.warn('Alguns slides não foram encontrados');
            }
            
            // Atualiza imagens quando a tela é redimensionada
            window.addEventListener('resize', function() {
                const newIsMobile = window.innerWidth <= 768;
                if (newIsMobile !== isMobile) {
                    console.log('Dispositivo mudou, recarregando imagens...');
                    location.reload(); // Recarrega para aplicar novas imagens
                }
            });
        }
        
        // Inicializa o slider quando o DOM estiver pronto
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', initBackgroundSlider);
        } else {
            initBackgroundSlider();
        }
    })();
    </script>
    
    
    
    
    
