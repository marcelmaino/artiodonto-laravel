// Script para o slider de antes e depois
document.addEventListener('DOMContentLoaded', function() {
    const beforeAfterContainers = document.querySelectorAll('.before-after-container');
    
    beforeAfterContainers.forEach(container => {
        const sliderHandle = container.querySelector('.slider-handle');
        const afterImage = container.querySelector('.after-image');
        let isDragging = false;
        
        // Define a posição inicial (50%)
        container.style.setProperty('--clip-position', '50%');
        
        // Função para atualizar a posição do slider
        function updateSliderPosition(clientX) {
            const rect = container.getBoundingClientRect();
            const x = clientX - rect.left;
            const percentage = Math.max(0, Math.min(100, (x / rect.width) * 100));
            
            // Atualiza a variável CSS para o clip-path
            container.style.setProperty('--clip-position', percentage + '%');
            
            // Atualiza a posição do slider handle
            if (sliderHandle) {
                sliderHandle.style.left = percentage + '%';
            }
        }
        
        // Função para prevenir seleção padrão
        function preventSelection(e) {
            e.preventDefault();
            e.stopPropagation();
            return false;
        }
        
        // Event listeners para mouse
        container.addEventListener('mousedown', function(e) {
            e.preventDefault();
            isDragging = true;
            updateSliderPosition(e.clientX);
            container.style.cursor = 'col-resize';
            
            // Previne seleção durante o arraste
            document.addEventListener('selectstart', preventSelection);
        });
        
        document.addEventListener('mousemove', function(e) {
            if (isDragging) {
                e.preventDefault();
                updateSliderPosition(e.clientX);
            }
        });
        
        document.addEventListener('mouseup', function() {
            if (isDragging) {
                isDragging = false;
                container.style.cursor = 'col-resize';
                
                // Remove a prevenção de seleção
                document.removeEventListener('selectstart', preventSelection);
            }
        });
        
        // Event listeners para touch (dispositivos móveis)
        container.addEventListener('touchstart', function(e) {
            e.preventDefault();
            e.stopPropagation();
            isDragging = true;
            const touch = e.touches[0];
            updateSliderPosition(touch.clientX);
        });
        
        container.addEventListener('touchmove', function(e) {
            e.preventDefault();
            e.stopPropagation();
            if (isDragging) {
                const touch = e.touches[0];
                updateSliderPosition(touch.clientX);
            }
        });
        
        container.addEventListener('touchend', function(e) {
            e.preventDefault();
            isDragging = false;
        });
        
        // Event listener para clique direto no container
        container.addEventListener('click', function(e) {
            if (!isDragging) {
                e.preventDefault();
                updateSliderPosition(e.clientX);
            }
        });
        
        // Event listener para hover (opcional - para melhor UX)
        container.addEventListener('mouseenter', function() {
            if (!isDragging) {
                container.style.cursor = 'col-resize';
            }
        });
        
        container.addEventListener('mouseleave', function() {
            if (!isDragging) {
                container.style.cursor = 'default';
            }
        });
        
        // Previne seleção de texto em todo o container
        container.addEventListener('selectstart', preventSelection);
        container.addEventListener('dragstart', preventSelection);
    });
    
    console.log('Slider de antes e depois inicializado com sucesso!');
});

// Script para controlar a navegação do slider de antes e depois
document.addEventListener('DOMContentLoaded', function() {
    const sliderContainer = document.querySelector('.antes-depois-slider-container');
    const slides = document.querySelectorAll('.slide');
    const prevBtn = document.getElementById('prevBtn');
    const nextBtn = document.getElementById('nextBtn');
    const indicators = document.querySelectorAll('[id^="antes-depois-indicator"]');
    
    let currentSlideIndex = 0;
    const totalSlides = slides.length;
    
            // Função para mostrar um slide específico
        function showSlide(slideIndex) {
            if (slideIndex < 0 || slideIndex >= totalSlides) return;
            
            // Atualiza o container com transform
            // Como cada slide tem 9.090909% de largura, multiplicamos por 9.090909
            const translateX = -slideIndex * 9.090909;
            sliderContainer.style.transform = `translateX(${translateX}%)`;
            
            // Atualiza o slide ativo
            currentSlideIndex = slideIndex;
            
            // Atualiza os indicadores
            indicators.forEach((indicator, index) => {
                if (index === slideIndex) {
                    indicator.classList.remove('opacity-50');
                    indicator.classList.add('bg-white');
                } else {
                    indicator.classList.add('opacity-50');
                    indicator.classList.remove('bg-white');
                }
            });
            
            console.log(`Slide ${slideIndex + 1} ativo, translateX: ${translateX}%`);
        }
    
    // Função para ir para o próximo slide
    function nextSlide() {
        const nextIndex = (currentSlideIndex + 1) % totalSlides;
        showSlide(nextIndex);
    }
    
    // Função para ir para o slide anterior
    function prevSlide() {
        const prevIndex = currentSlideIndex === 0 ? totalSlides - 1 : currentSlideIndex - 1;
        showSlide(prevIndex);
    }
    
    // Event listeners para os botões de navegação
    if (prevBtn) {
        prevBtn.addEventListener('click', prevSlide);
    }
    
    if (nextBtn) {
        nextBtn.addEventListener('click', nextSlide);
    }
    
    // Event listeners para os indicadores
    indicators.forEach((indicator, index) => {
        indicator.addEventListener('click', () => showSlide(index));
    });
    
    // Inicializa o primeiro slide
    showSlide(0);
    
    console.log('Navegação do slider de antes e depois inicializada com sucesso!');
});
