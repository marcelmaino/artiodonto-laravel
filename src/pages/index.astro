            // Embaralhar todas as imagens e distribuir entre os sliders
            const imagensEmbaralhadas = embaralharArray(imagens);
            
            // Distribuir as imagens: 4 para o primeiro, 4 para o segundo, 3 para o terceiro
            const grupo1 = imagensEmbaralhadas.slice(0, 4); // 4 imagens
            const grupo2 = imagensEmbaralhadas.slice(4, 8); // 4 imagens  
            const grupo3 = imagensEmbaralhadas.slice(8, 11); // 3 imagens
            
            // Aplicar imagens aos sliders
