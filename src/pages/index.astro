    (function() {
        // Função para ativar fade-in ao rolar
        function onScrollFadeIn() {
            // Anima elementos com classe fade-on-scroll
            var fadeElements = document.querySelectorAll('.fade-on-scroll');
            var windowHeight = window.innerHeight;
            
            fadeElements.forEach(function(el) {
                var rect = el.getBoundingClientRect();
                var delay = parseInt(el.getAttribute('data-fade-delay') || '0') || 0;
                if (rect.top < windowHeight - 60) {
                    setTimeout(function() {
                        el.classList.add('fade-in-active');
                        el.classList.remove('opacity-0');
                    }, delay);
                }
            });
            
            // Anima elementos com classe procedimentos-fade-in
            var procedimentosElements = document.querySelectorAll('.procedimentos-fade-in');
            console.log('Elementos procedimentos encontrados:', procedimentosElements.length);
            
            procedimentosElements.forEach(function(el) {
                var rect = el.getBoundingClientRect();
                var delayClass = el.className.match(/delay-(\d+)/);
                var delay = delayClass ? parseInt(delayClass[1]) * 100 : 0;
                
                if (rect.top < windowHeight - 60) {
                    console.log('Animando elemento:', el, 'com delay:', delay);
                    setTimeout(function() {
                        el.classList.add('fade-in-active');
                        console.log('Classe fade-in-active adicionada a:', el);
                    }, delay);
                }
            });
        }
    
        // Adiciona a classe CSS para fade-in
        var style = document.createElement('style');
        style.innerHTML = `
            .fade-on-scroll {
                opacity: 0;
                transform: translateY(40px);
                transition: opacity 0.8s cubic-bezier(.4,0,.2,1), transform 0.8s cubic-bezier(.4,0,.2,1);
                will-change: opacity, transform;
            }
            .fade-on-scroll.fade-in-active {
                opacity: 1 !important;
                transform: translateY(0);
            }
            
            .procedimentos-fade-in {
                opacity: 0 !important;
                transform: translateY(30px);
                transition: all 0.6s ease-out;
            }
            
            .procedimentos-fade-in.fade-in-active {
                opacity: 1 !important;
                transform: translateY(0);
            }
        `;
        document.head.appendChild(style);
    
        // Inicializa e escuta o scroll
        window.addEventListener('scroll', onScrollFadeIn);
        window.addEventListener('resize', onScrollFadeIn);
        document.addEventListener('DOMContentLoaded', function() {
            setTimeout(onScrollFadeIn, 200); // Pequeno delay para garantir layout
            // Executa novamente após um tempo para garantir que todos os elementos sejam animados
            setTimeout(onScrollFadeIn, 1000);
        });
    })();
