<Layout title="Procedimentos - Arti Odontologia e Saúde" description="Conheça todos os procedimentos e tratamentos oferecidos" isInternalPage={true}>

<style>
    /* Estilo para limitar altura dos textos dos procedimentos a 8 linhas */
    .procedimento-texto {
        height: 12rem; /* Altura fixa equivalente a aproximadamente 8 linhas */
        overflow-y: auto; /* Adiciona rolagem vertical quando necessário */
        line-height: 1.5; /* Espaçamento entre linhas */
        padding-right: 8px; /* Espaço para a barra de rolagem */
    }
    
    /* Estilização da barra de rolagem */
    .procedimento-texto::-webkit-scrollbar {
        width: 6px;
    }
    
    .procedimento-texto::-webkit-scrollbar-track {
        background: #f1f1f1;
        border-radius: 3px;
    }
    
    .procedimento-texto::-webkit-scrollbar-thumb {
        background: #14B8A6;
        border-radius: 3px;
    }
    
    .procedimento-texto::-webkit-scrollbar-thumb:hover {
        background: #0D9488;
    }
    
    /* Para Firefox */
    .procedimento-texto {
        scrollbar-width: thin;
        scrollbar-color: #14B8A6 #f1f1f1;
    }
</style>

