            menuMobile.classList.add('hidden');
            document.body.style.overflow = '';
        });

        // Fecha o menu mobile ao clicar em qualquer link do menu mobile
        menuMobile.querySelectorAll('a').forEach(link => {
            link.addEventListener('click', () => {
                console.log('Link clicado, fechando menu');
                menuMobile.classList.add('hidden');
                document.body.style.overflow = '';
            });
        });

        // Fecha o menu ao clicar fora dele (área escura)
        menuMobile.addEventListener('click', (e) => {
            if (e.target === menuMobile) {
                console.log('Clicou fora do menu, fechando');
                menuMobile.classList.add('hidden');
                document.body.style.overflow = '';
            }
        });

        // Fecha o menu com tecla ESC
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape' && !menuMobile.classList.contains('hidden')) {
                console.log('Tecla ESC pressionada, fechando menu');
                menuMobile.classList.add('hidden');
